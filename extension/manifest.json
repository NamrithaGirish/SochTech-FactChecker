{
    "manifest_version": 3,
    "name": "Webpage Content Reader",
    "version": "1.0",
    "description": "Displays the content of the current webpage in a small box.",
    "permissions": ["activeTab","scripting"],
    "host_permissions": ["*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
  }